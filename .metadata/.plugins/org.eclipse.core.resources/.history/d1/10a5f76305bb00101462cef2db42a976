    <!-- Toggle Buttons -->
    <button id="toggleTheme" class="btn btn-toggle position-fixed bottom-0 end-0 m-3">
        <i class="fas fa-palette"></i>
    </button>
    
    <button id="toggleAlternate" class="btn btn-toggle-alternate position-fixed bottom-0 end-0 mb-5 me-3">
        <i class="fas fa-eye"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggleTheme = document.getElementById('toggleTheme');
        const toggleAlternate = document.getElementById('toggleAlternate');
        
        // Inicializar con modo claro
        document.body.classList.add('light-mode');
        
        toggleTheme.addEventListener('click', () => {
            if (document.body.classList.contains('light-mode')) {
                document.body.classList.remove('light-mode');
                document.body.classList.add('dark-mode');
                toggleTheme.innerHTML = '<i class="fas fa-sun"></i>';
            } else {
                document.body.classList.remove('dark-mode');
                document.body.classList.add('light-mode');
                toggleTheme.innerHTML = '<i class="fas fa-palette"></i>';
            }
        });
        
        toggleAlternate.addEventListener('click', () => {
            if (document.body.classList.contains('light-mode') || document.body.classList.contains('dark-mode')) {
                document.body.classList.remove('light-mode', 'dark-mode');
                document.body.classList.add('alternate-light-mode');
                toggleAlternate.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else if (document.body.classList.contains('alternate-light-mode')) {
                document.body.classList.remove('alternate-light-mode');
                document.body.classList.add('alternate-dark-mode');
                toggleAlternate.innerHTML = '<i class="fas fa-eye"></i>';
            } else {
                document.body.classList.remove('alternate-dark-mode');
                document.body.classList.add('light-mode');
                toggleAlternate.innerHTML = '<i class="fas fa-eye"></i>';
                toggleTheme.innerHTML = '<i class="fas fa-palette"></i>';
            }
        });
    </script>
