const toggle = document.createElement('button');
toggle.innerHTML = 'ğŸ’©';
toggle.className = 'btn btn-secondary position-fixed top-0 end-0 m-3';
document.body.appendChild(toggle);

// Estilos para la combinaciÃ³n mÃ¡s desagradable
const style = document.createElement('style');
style.innerHTML = `
    .light-mode {
        background-color: #7FFF00 !important; /* Verde lima Ã¡cido */
        color: #FF00FF !important; /* Rosa magenta chillÃ³n */
        transition: all 0.3s ease;
    }
    
    .dark-mode {
        background-color: #FF00FF !important; /* Rosa magenta chillÃ³n */
        color: #7FFF00 !important; /* Verde lima Ã¡cido */
        transition: all 0.3s ease;
    }
    
    body {
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        font-family: Arial, sans-serif;
    }
    
    .btn {
        background-color: #FF69B4 !important;
        border-color: #32CD32 !important;
        color: #000 !important;
        z-index: 1000;
        font-weight: bold;
    }
`;
document.head.appendChild(style);

// Inicializar con modo claro
document.body.classList.add('light-mode');

toggle.addEventListener('click', () => {
    if (document.body.classList.contains('light-mode')) {
        document.body.classList.remove('light-mode');
        document.body.classList.add('dark-mode');
        toggle.innerHTML = 'ğŸ‘ï¸';
    } else {
        document.body.classList.remove('dark-mode');
        document.body.classList.add('light-mode');
        toggle.innerHTML = 'ğŸ’©';
    }
});