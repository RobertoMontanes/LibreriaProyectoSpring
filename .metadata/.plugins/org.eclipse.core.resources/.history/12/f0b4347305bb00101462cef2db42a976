<head>
    <meta charset="UTF-8">
    <title>Librería Desagradable</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            font-family: Arial, sans-serif;
            transition: all 0.3s ease;
        }
        
        /* Modo normal (colores desagradables 1) */
        .color-mode-1 {
            background-color: #D4B300 !important; /* Amarillo mostaza feo */
            color: #5D4037 !important; /* Marrón oscuro */
        }
        
        /* Modo alternativo (colores desagradables 2) */
        .color-mode-2 {
            background-color: #7FFF00 !important; /* Verde lima ácido */
            color: #FF00FF !important; /* Rosa magenta chillón */
        }
        
        .btn-toggle {
            background-color: #8B7500 !important;
            border-color: #4E342E !important;
            color: white !important;
            z-index: 1000;
            width: 60px;
            height: 60px;
            border-radius: 50% !important;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            position: fixed;
            top: 20px;
            right: 20px;
        }
        
        .color-mode-2 .btn-toggle {
            background-color: #FF69B4 !important;
            border-color: #32CD32 !important;
            color: #000 !important;
        }
        
        h1 {
            margin-top: 80px;
            text-align: center;
            font-weight: bold;
            padding: 20px;
            border-radius: 10px;
        }
        
        .color-mode-1 h1 {
            background-color: #5D4037;
            color: #D4B300;
        }
        
        .color-mode-2 h1 {
            background-color: #FF00FF;
            color: #7FFF00;
        }
    </style>
</head>
<body class="color-mode-1">
    <h1>PAGINA INDEX.HTML</h1>
    
    <button id="toggleButton" class="btn-toggle">
        <i class="fas fa-palette"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggleButton = document.getElementById('toggleButton');
        
        toggleButton.addEventListener('click', () => {
            if (document.body.classList.contains('color-mode-1')) {
                document.body.classList.remove('color-mode-1');
                document.body.classList.add('color-mode-2');
                toggleButton.innerHTML = '<i class="fas fa-skull"></i>';
            } else {
                document.body.classList.remove('color-mode-2');
                document.body.classList.add('color-mode-1');
                toggleButton.innerHTML = '<i class="fas fa-palette"></i>';
            }
        });
    </script>
</body>
</html>